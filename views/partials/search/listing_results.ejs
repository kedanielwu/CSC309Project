<!-- views/partials/search/listing_results.ejs -->

<table>
  <thead>
      <tr>
          <th class="col-sm-1 text-center"><h4>Image</h4></th>
          <th class="col-sm-2 text-center"><h4>Date Posted</h4></th>
          <th class="col-sm-2 text-center"><h4>Title</h4></th>
          <th class="col-sm-5 text-center"><h4>Description</h4></th>
          <th class="col-sm-1 text-center"><h4>Price</h4></th>
      </tr>
  </thead>

  <tbody>
    <% for(var i=0; i < results.length; i++) { %>
      <tr class="clickable-row search-result" data-href=/listings?id=<%= results[i]._id %> >
        <td>
          <div class="img-result">
            <img src=<%= results[i].picture %> alt="listing-image">
          </div>
        </td>
        <td><%= results[i].date.toLocaleDateString() %></td>
        <td><h4><%= results[i].title %></h4></td>
        <td><%= results[i].description %></td>
        <td><h4><%= results[i].price %></h4></td>
      </tr>
    <% } %>
  </tbody>
</table>