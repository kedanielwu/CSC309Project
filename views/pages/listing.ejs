<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>    
    <body id="page-top">
        <% include ../partials/nav %>
    <header>
    <br>
    <br>
    <br>
    <br>
    <section id="ListingInfo">
        <div class="container">
        <div id="listing_id" class='hidden'><%= Listing._id %></div>
            <div class="row">
                <div class="col-sm-5">

                    <center>
                        <h3><%= title %></h3>
                         <% if(Listing.picture) { %>
                             <img class="img-rounded" src="<%= Listing.picture %>" alt="" style="height:180px;">
                            <% } else{%>
                             <img class="img-rounded" src="https://www.retirementhomes.com/homes/static/RHV5/images/default.jpg" alt="" style="height:180px;">
                            <% } %>

                    </center>
                        <% if(Cur && Cur === Listing.username && !(isAdmin)) {%>
                        <form action="/editlisting" id="edit-listing">
                          <br>
                          <input class="form-control hidden" type="text" name="_id" value="<%= Listing._id %>">
                          <input type="submit" class="btn btn-primary" value="Edit" />
                        </form>
                        <form action="/deletelisting" id="del-listing">
                          <br>
                          <input class="form-control hidden" type="text" name="_id" value="<%= Listing._id %>">
                          <input type="submit" class="btn btn-primary" value="Delete" />
                        </form>
                        <% } %>

                </div>
                <div class="col-sm-5">
                    <br>
                    <br>
                    <br>
                    <h1>Description</h1>
                    <p><%= Listing.description %></p>
                    <h2><%= Listing.price %></h2>
                </div>
            </div>

        </div>
        </header>
            <div class="col-sm-12"  id="seller">
                <div class="header-content" >
                    <div class="header-content-inner">
                    
                        <div id="user_id" class='hidden'><%= Listing.username %></div>
                            <h2 id="user_name"  style="margin-left: 115px; color:white"></h2>
                        <right>
                        <div class = "col-xs-6 col-md-3">
                            <center >
                                <img id="profilePicture" src="" alt="Profile Picture" class="img-rounded" style="width:50%;height:50%;">
                            </center>
                        </div>
                    
                        <div class = "col-xs-6 col-md-5" style="color:white">
                            <h1>Contact Information:</h1>
                            <h5>Phone: <p id="user_phone"></p></h5>
                            <h5>Email: <p id="user_email"></p></h5>
                                  
                        </div>
                        </right>
                    </div>
                </div>
            </div>

            <div class="col-sm-12"  id="comments">
                <div class="header-content" >
                    <div class="header-content-inner">
                        <h1 style="color: white;">Comments</h1>
                        <table>
                  		    <% for(var i=0; i<Listing.comments.length; i++) {%>
                  		      <tr>
                              <td class="col-md-6 col-md-offset-3">
                                <p>User: <%= Listing.comments[i].user_id %>
                              </td>
                              <td class="col-md-6 col-md-offset-3" style="color: Chartreuse;">
                                <p>Message: <%= Listing.comments[i].message %>
                              </td>
                            </tr> 
              		        <% } %>
              		    </table> 
                    <% if(Cur) {%>
                        <form action='/comments' method="POST">
                            <input class="form-control hidden" type="text" name="id" value="<%= Listing._id %>">
                            <input class="form-control hidden" type="text" id="user_id" name="user_id" value="<%= Cur %>">
                            <input class="form-control" type="text" id="message-input" name="message">
                            <br>
                            <input type="submit" class="btn btn-primary" value="Post Comment" />
                            </form>
                        <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <% include ../partials/footer.ejs %>
    <% include ../partials/scripts.ejs %>
    <script src="../public/js/listing.js"></script>

    </header>
    </body>

