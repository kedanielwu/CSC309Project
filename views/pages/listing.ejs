<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>    
    <body id="page-top">
        <% include ../partials/nav %>
    <header>
        <div class="container">
        <div id="listing_id" class='hidden'><%= Listing._id %></div>
            <div class="row">
                <div class="col-sm-5">
                    <div class="header-content">
                        <div class="header-content-inner">
                            <h2><%= title %></h2>
                            
                            <% if(Listing.picture) { %>
                             <img class="img-rounded" src="<%= Listing.picture %>" alt="" style="width:180px;height:180px;">
                            <% } else{%>
                             <img class="img-rounded" src="https://www.retirementhomes.com/homes/static/RHV5/images/default.jpg" alt="" style="width:180px;height:180px;">
                            <% } %>
                            <% if(Cur && Cur === Listing.username && !(isAdmin)) {%>
                            <form action="/editlisting" id="edit-listing">
                              <br>
                              <input class="form-control hidden" type="text" name="_id" value="<%= Listing._id %>">
                              <input type="submit" class="btn btn-primary" value="Edit" />
                            </form>
                            <form action="/deletelisting" id="del-listing">
                              <br>
                              <input class="form-control hidden" type="text" name="_id" value="<%= Listing._id %>">
                              <input type="submit" class="btn btn-primary" value="Delete" />
                            </form>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="col-sm-7">
                    <div class="header-content">
                        <div class="header-content-inner">
                            <h2>Description</h2>
                            <p><%= Listing.description %></p>
                            <h2>price</h2>
                            <p><%= Listing.price %></p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="header-content">
                        <div class="header-content-inner">
                            <div id="user_id" class='hidden'><%= Listing.username %></div>
                            <div class="col-xs-12 col-sm-12 col-md-12"><h2 id="user_name"></h2></div>
                            <div class = "col-xs-6 col-md-4">
                                <img id="profilePicture" src="" alt="Profile Picture" class="img-rounded" style="width:180px;height:180px;">             
                            </div>
                            <div class = "col-xs-6 col-md-4">
                                <h2>Discription:</h2>
                                <p id="user_description"></p>                
                            </div>
                            <div class = "col-xs-6 col-md-4">
                                <h2>Contact Information:</h2>
                                <h3>Phone: </h3>
                                <p id="user_phone"></p>
                                <h3>Email: </h3>
                                <p id="user_email"></p>            
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="header-content">
                        <div class="header-content-inner">
                            <h1>Comments</h1>
                            <table>
          		    <% for(var i=0; i<Listing.comments.length; i++) {%>
          		      <tr>
                      <td class="col-md-6 col-md-offset-3">
                        <p>User: <%= Listing.comments[i].user_id %>
                      </td>
                      <td class="col-md-6 col-md-offset-3" style="color: Chartreuse;">
                        <p>Message: <%= Listing.comments[i].message %>
                      </td>
                    </tr> 
          		    <% } %>
          		    </table> 
                        <% if(Cur) {%>
                            <form action='/comments' method="POST">
                                <input class="form-control hidden" type="text" name="id" value="<%= Listing._id %>">
                                <input class="form-control hidden" type="text" id="user_id" name="user_id" value="<%= Cur %>">
                                <input class="form-control" type="text" id="message-input" name="message">
                            <input type="submit" class="btn btn-primary" value="Post Comment" />
                            </form>
                        <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% include ../partials/footer.ejs %>
        <% include ../partials/scripts.ejs %>
        <script src="../public/js/listing.js"></script>

    </header>
    </body>